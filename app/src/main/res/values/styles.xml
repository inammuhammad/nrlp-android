<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewToolbarHeading" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:fontFamily">@font/hp_simplified_rg</item>
    </style>

    <style name="TextViewLarge" parent="TextViewHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/hp_simplified_rg</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/pure_black</item>
    </style>

    <style name="TextViewDialogHeading" parent="TextViewLarge">
        <item name="android:layout_marginStart">@dimen/unit_0dp</item>
        <item name="android:layout_marginEnd">@dimen/unit_0dp</item>
        <item name="android:layout_marginRight">@dimen/unit_0dp</item>
        <item name="android:layout_marginLeft">@dimen/unit_0dp</item>
        <item name="android:fontFamily">@font/hp_simplified_rg</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_large</item>
    </style>

    <style name="TextViewDialogSubHeading" parent="TextViewMedium">
        <item name="android:layout_marginStart">@dimen/unit_0dp</item>
        <item name="android:layout_marginEnd">@dimen/unit_0dp</item>
        <item name="android:layout_marginRight">@dimen/unit_0dp</item>
        <item name="android:layout_marginLeft">@dimen/unit_0dp</item>
        <item name="android:layout_marginTop">@dimen/unit_12dp</item>
        <item name="android:fontFamily">@font/hp_simplified_lt</item>
    </style>


    <style name="TextViewHeading" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/unit_20sp</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:fontFamily">@font/gramound_bd</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextViewHeadingLite" parent="TextViewHeading">
        <item name="android:fontFamily">@font/gramound</item>
    </style>

    <style name="TextViewStatusActive" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/unit_12dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:text">@string/active</item>
        <item name="android:layout_marginEnd">@dimen/unit_12dp</item>
        <item name="android:paddingTop">@dimen/unit_4dp</item>
        <item name="android:paddingBottom">@dimen/unit_4dp</item>
        <item name="android:paddingStart">@dimen/unit_12dp</item>
        <item name="android:paddingEnd">@dimen/unit_12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/active_beneficiary_background</item>
    </style>

    <style name="TextViewStatusPending" parent="TextViewStatusActive">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:text">@string/pending</item>
        <item name="android:background">@drawable/pending_beneficiary_background</item>
    </style>

    <style name="TextViewStatusRedeemed" parent="TextViewStatusActive">
        <item name="android:textColor">@color/redeemed_points</item>
        <item name="android:text">@string/pending</item>
        <item name="android:background">@drawable/pending_redeemed_background</item>
    </style>

    <style name="TextViewMediumWithGreenBG" parent="TextViewMedium">
        <item name="android:paddingStart">@dimen/_40sdp</item>
        <item name="android:paddingEnd">@dimen/_40sdp</item>
        <item name="android:paddingRight">@dimen/_40sdp</item>
        <item name="android:paddingLeft">@dimen/_40sdp</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/active_beneficiary_background</item>
    </style>

    <style name="one_link_text_input_layout_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">@dimen/unit_28dp</item>
    </style>

    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/unit_14sp</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="fontFamily">@font/hp_simplified_rg</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <style name="TextViewSubHeading" parent="TextViewHeading">
        <item name="android:textSize">@dimen/unit_12sp</item>
        <item name="android:fontFamily">@font/hp_simplified_rg</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_marginTop">@dimen/unit_20dp</item>
    </style>

    <style name="TextViewMedium" parent="TextViewHeading">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/unit_14sp</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:fontFamily">@font/hp_simplified_rg</item>
        <item name="android:lineSpacingExtra">@dimen/margin_small</item>
    </style>

    <style name="TextViewMediumBold" parent="TextViewMedium">
        <item name="android:fontFamily">@font/hp_simplified</item>
    </style>

    <style name="TextViewSmall" parent="TextViewMedium">
        <item name="android:textSize">@dimen/unit_12sp</item>
    </style>

    <style name="TextViewSmallNoMarginsLite" parent="TextViewSmall">
        <item name="android:fontFamily">@font/hp_simplified_lt</item>
        <item name="android:layout_marginStart">@dimen/unit_0dp</item>
        <item name="android:layout_marginEnd">@dimen/unit_0dp</item>
        <item name="android:layout_marginRight">@dimen/unit_0dp</item>
        <item name="android:layout_marginLeft">@dimen/unit_0dp</item>
        <item name="android:layout_marginTop">@dimen/unit_0dp</item>
