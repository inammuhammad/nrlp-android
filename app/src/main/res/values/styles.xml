    <style name="TextViewMediumNoMargins" parent="TextViewMedium">
        <item name="android:layout_marginStart">@dimen/unit_0dp</item>
        <item name="android:layout_marginEnd">@dimen/unit_0dp</item>
        <item name="android:layout_marginRight">@dimen/unit_0dp</item>
        <item name="android:layout_marginLeft">@dimen/unit_0dp</item>
        <item name="android:layout_marginTop">@dimen/unit_0dp</item>
    </style>

    <style name="TextViewMediumNoMarginsLite" parent="TextViewMediumNoMargins">
        <item name="android:fontFamily">@font/hp_simplified_lt</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/unit_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/hp_simplified_rg</item>
        <item name="android:longClickable">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:layout_marginTop">@dimen/unit_8dp</item>
        <item name="android:imeOptions">actionNext|flagForceAscii</item>
        <item name="android:textSelectHandle">@drawable/empty_drawable</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:paddingStart">@dimen/margin_large</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>
    </style>

    <style name="EditTextFixedDigits" parent="EditTextTheme">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ 1234567890
            $&amp;+,:;=\\\\?@#|/&quot;&apos;&lt;&gt;.^*()%!-!@#$%^()[]+/*_\"~|∆¶×÷π√¥€¢£
        </item>
    </style>

    <style name="EditTextFixedNumbers" parent="EditTextTheme">
        <item name="android:digits">1234567890</item>
    </style>

    <style name="EditTextOTP" parent="EditTextTheme">
        <item name="android:background">@drawable/otp_disabled_background</item>
