<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.onelink.nrlp.android.features.viewStatement.viewmodel.AdvancedLoyaltyStatementFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvLoyaltyStatementMsg"
            style="@style/TextViewMediumNoMarginsLite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/unit_32dp"
            android:layout_marginEnd="@dimen/margin_large"
            android:text="@string/generate_advance_statement"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewEmailAddress"
            style="@style/TextViewSubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_44dp"
            android:text="@string/email_address"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLoyaltyStatementMsg" />


        <com.onelink.nrlp.android.widgets.OneLinkTextInputLayout
            android:id="@+id/tilEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_8dp"
            android:visibility="visible"
            app:errorTextAppearance="@style/one_link_text_input_layout_error_appearance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmailAddress">

            <com.onelink.nrlp.android.widgets.OneLinkEditText
                android:id="@+id/etEmailAddress"
                style="@style/EditTextFixedDigits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:imeOptions="actionDone|flagForceAscii"
                android:inputType="textEmailAddress"
                android:text="@={viewModel.emailAddress}" />
        </com.onelink.nrlp.android.widgets.OneLinkTextInputLayout>

        <TextView
            android:id="@+id/textViewFromDate"
            style="@style/TextViewSubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilEmailAddress" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lyFromDate"
            style="@style/EditTextFixedDigits"
            android:layout_width="match_parent"
            android:layoutDirection="ltr"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFromDate">

            <TextView
                android:id="@+id/tvSelectFromDate"
                style="@style/EditTextFixedDigits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/unit_0dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="true"
                android:focusable="false"
                android:gravity="start"
                android:textDirection="ltr"
                android:hint="@string/select_date"
                android:padding="@dimen/unit_0dp"
                android:paddingStart="@dimen/unit_4dp"
                android:paddingEnd="@dimen/unit_4dp"
                android:singleLine="true"
                android:text="@={viewModel.fromDate}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageViewDropDownFromDate"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewDropDownFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/unit_20dp"
                android:src="@drawable/ic_spinner_dropdown"
                android:textColor="@color/grey"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewToDate"
            style="@style/TextViewSubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lyFromDate" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lyToDate"
            style="@style/EditTextFixedDigits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="ltr"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewToDate">

            <TextView
                android:id="@+id/tvSelectToDate"
                style="@style/EditTextFixedDigits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/unit_0dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="true"
                android:focusable="false"
                android:gravity="start"
                android:hint="@string/select_date"
                android:textDirection="ltr"
                android:padding="@dimen/unit_0dp"
                android:paddingStart="@dimen/unit_4dp"
                android:paddingEnd="@dimen/unit_4dp"
                android:singleLine="true"
                android:text="@={viewModel.toDate}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageViewDropDownToDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewDropDownToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/unit_20dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_spinner_dropdown"
                android:textColor="@color/grey"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btnNext"
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="@{viewModel.fromDateNotEmpty &amp;&amp; viewModel.toDateNotEmpty &amp;&amp; viewModel.emailNotEmpty}"
            android:text="@string/request_statement"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

