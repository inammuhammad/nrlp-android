<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/ivMenuItemImage"
            android:layout_width="@dimen/unit_17dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit_18dp"
            android:layout_marginTop="@dimen/unit_18dp"
            android:layout_marginBottom="@dimen/margin_large"
            android:contentDescription="@null"
            android:src="@drawable/ic_side_menu_complaints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvMenuItemTitle"
            style="@style/TextViewMediumNoMargins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit_36dp"
            android:focusable="false"
            android:lineSpacingExtra="@dimen/margin_small"
            android:text="@string/change_password" />

    </LinearLayout>
</layout>