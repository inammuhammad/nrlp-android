<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".features.splash.view.SplashActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lytPartners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit_20dp"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginEnd="@dimen/unit_20dp">

            <ImageView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_state_emblem_of_pakistan" />

            <ImageView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/prl_logo" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_50sdp"
                android:contentDescription="@null"
                android:src="@drawable/ic_state_bank" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_splash_bg" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_splash_bottom_shadow" />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@+id/lytPartners"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/unit_16dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/margin_small"
            android:src="@drawable/ic_sohni_dharti" />

        <LinearLayout
            android:id="@+id/lytBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/unit_32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                style="@style/TextViewMediumNoMargins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/powered_by" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:contentDescription="@null"
                android:src="@drawable/onelink_logo" />

        </LinearLayout>

    </RelativeLayout>
</layout>