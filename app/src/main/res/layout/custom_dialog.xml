<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="@dimen/_320sdp"
    android:background="@drawable/dialog_background"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:minWidth="@dimen/_230sdp"
    android:orientation="vertical"
    android:padding="@dimen/margin_large">

    <ImageView
        android:id="@+id/ivDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_beneficiary_created_dialog" />

    <TextView
        android:id="@+id/tvDialogTitle"
        style="@style/TextViewDialogHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Beneficiary Created" />

    <TextView
        android:id="@+id/tvDialogSubTitle"
        style="@style/TextViewDialogSubHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Beneficiary created successfully, we have send an SMS to the beneficiary." />

    <Button
        android:id="@+id/btnNeutral"
        style="@style/TextViewMediumNoMargins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_background"
        android:enabled="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:visibility="gone"
        tools:text="Done"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/lytPosNegButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <Button
            android:id="@+id/btnPositive"
            style="@style/DialogPositiveButtonTheme"
            android:layout_weight="1"
            android:enabled="true"
            tools:text="Yes" />

        <Button
            android:id="@+id/btnNegative"
            style="@style/DialogNegativeButtonTheme"
            android:layout_weight="1"
            android:enabled="true"
            tools:text="No" />
    </LinearLayout>

</LinearLayout>
